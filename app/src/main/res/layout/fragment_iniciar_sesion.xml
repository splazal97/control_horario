<?xml version="1.0" encoding="utf-8"?>
<com.andexert.library.RippleView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.IniciarSesionFragment"
    android:gravity="center"
    android:orientation="vertical"
    android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="15sp">
            <ImageView
                android:id="@+id/logo"
                android:src="@drawable/infoplaza"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Iniciar Sesion"
                android:textSize="25sp"
                android:padding="15dp"
                android:layout_margin="12dp"
                android:gravity="center"/>

            <com.example.eljo.customedittext.EljoPriftiEditText
                android:id="@+id/insertUser"
                android:hint="@string/insertUser"
                android:padding="15sp"
                android:textSize="25dp"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:inputType="textPersonName"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.573"
                />

               <EditText
                android:padding="15sp"
                android:textSize="25dp"
                android:id="@+id/insertPass"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="@string/insert_pass"
                android:inputType="textPassword"
                />
            <TextView
                android:id="@+id/registerText"
                android:textSize="22sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/register_text"
                android:padding="15sp"
                />
            <com.sanojpunchihewa.glowbutton.GlowButton
                android:id="@+id/iniciar_sesionBtn"
                android:textSize="20sp"
                android:text="@string/iniciar_sesion"
                android:padding="20dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                app:buttonColor="#7CC7EE"
                app:glowColor="#ffffff"
               />

        </LinearLayout>
</com.andexert.library.RippleView>